# Application Settings
NODE_ENV=development
PORT=5000
API_PORT=8000

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/terrafusionpro
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=terrafusionpro

# External Services
SENTRY_DSN=
DATADOG_API_KEY=
SLACK_WEBHOOK_URL=

# Authentication
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRY=7d
COOKIE_SECRET=change_this_to_another_secure_random_string

# CI/CD Configuration
GITHUB_TOKEN=

# AWS Configuration (for deployments)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Logging
LOG_LEVEL=info
ENABLE_DEBUG=true
ENABLE_METRICS=true

# Environment URLs
DEV_API_URL=http://localhost:8000/api
DEV_FRONTEND_URL=http://localhost:5000
STAGING_API_URL=https://staging-api.terrafusion.com
STAGING_FRONTEND_URL=https://staging.terrafusion.com
PROD_API_URL=https://api.terrafusion.com
PROD_FRONTEND_URL=https://app.terrafusion.com
